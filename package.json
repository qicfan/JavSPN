{
  "name": "javspn",
  "version": "0.0.1",
  "description": "",
  "author": "dean <qicfan@gmail.com>",
  "private": true,
  "type": "module",
  "main": "electron/main.mjs",
  "scripts": {
    "dev": "concurrently vite \"electron .\"",
    "build": "vue-tsc --build --force && vite build && electron-builder",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "element-plus": "^2.6.1",
    "pinia": "^2.1.7",
    "vue": "^3.4.15",
    "vue-i18n": "^9.10.1",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node20": "^20.1.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.10",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.4",
    "@vue/tsconfig": "^0.5.1",
    "concurrently": "^8.2.2",
    "electron": "^29.1.1",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "jsdom": "^24.0.0",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.0.3",
    "typescript": "~5.3.0",
    "vite": "^5.0.11",
    "vitest": "^1.2.2",
    "vue-tsc": "^1.8.27"
  },
  "build": {
    "appId": "me.dean.javspn",
    "asar": true,
    "productName": "JavSPN",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist",
      "electron"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "artifactName": "${productName}-Mac-${version}-Installer.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Windows-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "artifactName": "${productName}-Linux-${version}.${ext}"
    }
  }
}
